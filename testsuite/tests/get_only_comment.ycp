//
// get_only_comment tests
//
// $Id$
//

{

include "testsuite.ycp";

import "Pkg";   // override packamanager

import "Mode";		// mode is imported in Product
Mode::config = true;	// package manager is initialized in Product constructor when Mode::config is false !!
import "Sysconfig";

// Note: DUMP is used instead of TEST, because it supports multiline
// output (TEST dumps only first line)

string input = nil;
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "# sdfa  ";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "### gfh ";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "# dsfds";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "# adsf \n# sdfwer\n";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );
DUMP( "---" );

input = "\n\n#134\n   \n#34763\n  ##Path";
DUMP( sformat("Input: %1", input) );
DUMP( "Output:" );
DUMP( Sysconfig::get_only_comment(input) );

}

